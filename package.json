{
  "name": "b2b-web-template",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20 <23",
    "pnpm": ">=10.13.1 <11"
  },
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:webpack": "next dev",
    "email:dev": "email dev --dir src/components/emails --port 3001",
    "prebuild": "node scripts/copy-translations.js && tsx scripts/generate-content-manifest.ts && pnpm content:slug-check && pnpm validate:config",
    "build": "next build",
    "build:analyze": "ANALYZE=true TURBOPACK_STATS=1 next build",
    "build:analyze:webpack": "ANALYZE=true next build --webpack",
    "build:webpack": "next build --webpack",
    "start": "next start",
    "test": "vitest run",
    "prepare": "git rev-parse --git-dir > /dev/null 2>&1 && lefthook install || true",
    "type-check": "tsc --noEmit",
    "validate:translations": "node scripts/validate-translations.js",
    "type-check:tests": "tsc --noEmit -p tsconfig.test.json",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --config eslint.config.mjs --cache --cache-location .eslintcache --max-warnings 0",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --config eslint.config.mjs --fix --cache --cache-location .eslintcache",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:visual": "playwright test tests/e2e/visual-regression.spec.ts",
    "test:visual:update": "playwright test tests/e2e/visual-regression.spec.ts --update-snapshots",
    "perf:lighthouse": "pnpm exec lhci autorun --config=lighthouserc.js",
    "analyze:size": "du -sh .next/static && echo '=== Top 5 Largest JS Files ===' && find .next/static -type f -name '*.js' -exec ls -lh {} \\; | sort -k5 -hr | head -5",
    "analyze:stats": "npx @statoscope/cli@latest generate --input .next/server/webpack-stats.json --output stats.html --open",
    "build:check": "pnpm prebuild && next build",
    "commitlint": "commitlint",
    "hooks:install": "lefthook install",
    "arch:check": "dependency-cruiser src --config .dependency-cruiser.js",
    "circular:check": "dependency-cruiser src --config .dependency-cruiser.js --include-only '^src' -T err",
    "security:audit": "pnpm audit --prod --audit-level moderate",
    "security:semgrep": "node scripts/semgrep-scan.js",
    "security:check": "pnpm security:audit && pnpm security:semgrep",
    "lint:pii": "node scripts/check-pii-in-logs.js",
    "i18n:validate:code": "tsx scripts/validate-i18n-content.ts",
    "i18n:shape:check": "node scripts/i18n-shape-check.js",
    "unused:check": "knip -c knip.jsonc --dependencies --files",
    "unused:fix": "knip -c knip.jsonc --fix",
    "unused:production": "knip -c knip.jsonc --production --dependencies --files --use-tsconfig-files -t tsconfig.knip.json",
    "scan:translations": "node scripts/translation-scanner.js",
    "sync:translations:enhanced": "node scripts/translation-sync.js",
    "content:slug-check": "node scripts/content-slug-sync.js",
    "content:manifest": "tsx scripts/generate-content-manifest.ts",
    "cache:invalidate": "node scripts/invalidate-cache.js",
    "cache:invalidate:i18n": "node scripts/invalidate-cache.js i18n",
    "cache:invalidate:content": "node scripts/invalidate-cache.js content",
    "cache:invalidate:all": "node scripts/invalidate-cache.js all",
    "i18n:full": "pnpm scan:translations && pnpm sync:translations:enhanced && pnpm validate:translations && pnpm content:slug-check && pnpm cache:invalidate:i18n",
    "quality:monitor": "node scripts/quality-monitor.js",
    "quality:report:local": "node scripts/quality-monitor.js && open reports/quality/latest-quality-summary.json",
    "quality:gate": "node scripts/quality-gate.js",
    "quality:gate:ci": "node scripts/quality-gate.js --mode=ci",
    "quality:gate:fast": "node scripts/quality-gate.js --mode=fast",
    "quality:gate:full": "node scripts/quality-gate.js --mode=full",
    "quality:gate:json": "node scripts/quality-gate.js --output=json",
    "quality:quick:staged": "node scripts/quality-quick-staged.js",
    "arch:metrics": "node scripts/architecture-metrics.js",
    "transform:barrel": "node scripts/transform-barrel-exports.js",
    "transform:barrel:dry": "node scripts/transform-barrel-exports.js --dry-run",
    "ci:quality": "pnpm run type-check && pnpm run lint:check && pnpm run quality:gate",
    "ci:metrics": "pnpm run arch:metrics",
    "perf:check": "echo 'Performance monitoring via Lighthouse CI - see lighthouserc.js'",
    "config:check": "node scripts/check-config-consistency.js",
    "validate:config": "tsx scripts/validate-production-config.ts",
    "eslint:disable:check": "node scripts/check-eslint-disable-usage.js",
    "test:e2e:no-reuse": "CI=1 pnpm test:e2e",
    "test:e2e:ci-local": "CI=1 pnpm test:e2e",
    "ci:local": "bash scripts/ci-local.sh",
    "ci:local:quick": "bash scripts/ci-local.sh --quick",
    "ci:local:fix": "pnpm format:write && pnpm lint:fix && echo '✅ 自动修复完成，请重新运行 pnpm ci:local'",
    "build:cf": "DEPLOY_TARGET=cloudflare NEXT_PUBLIC_DEPLOYMENT_PLATFORM=cloudflare opennextjs-cloudflare build",
    "build:cf:phase5": "pnpm build:cf && node scripts/cloudflare/build-phase5-worker.mjs",
    "build:cf:phase6": "pnpm build:cf && node scripts/cloudflare/build-phase6-workers.mjs",
    "preview:cf": "DEPLOY_TARGET=cloudflare NEXT_PUBLIC_DEPLOYMENT_PLATFORM=cloudflare opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy:cf": "DEPLOY_TARGET=cloudflare NEXT_PUBLIC_DEPLOYMENT_PLATFORM=cloudflare opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "deploy:cf:phase6:preview": "pnpm build:cf:phase6 && node scripts/cloudflare/deploy-phase6.mjs --env preview",
    "deploy:cf:phase6:production": "pnpm build:cf:phase6 && node scripts/cloudflare/deploy-phase6.mjs --env production",
    "deploy:cf:phase6:dry-run": "pnpm build:cf:phase6 && node scripts/cloudflare/deploy-phase6.mjs --env preview --dry-run",
    "cf:sync:server-actions-key": "node scripts/cloudflare/sync-server-actions-key.mjs",
    "cf:sync:server-actions-key:dry-run": "NEXT_SERVER_ACTIONS_ENCRYPTION_KEY=$(openssl rand -base64 32) node scripts/cloudflare/sync-server-actions-key.mjs --dry-run"
  },
  "dependencies": {
    "@marsidev/react-turnstile": "^1.4.1",
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "16.1.6",
    "@react-email/components": "^1.0.6",
    "@react-email/render": "^2.0.4",
    "@t3-oss/env-nextjs": "^0.13.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "airtable": "0.12.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.562.0",
    "next": "16.1.6",
    "next-intl": "^4.7.0",
    "next-themes": "0.4.6",
    "nextjs-toploader": "^3.9.17",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-draggable": "^4.5.0",
    "resend": "^6.8.0",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/generator": "^7.28.6",
    "@babel/parser": "^7.28.6",
    "@babel/traverse": "^7.28.6",
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.6.0",
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "^9.39.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "16.1.6",
    "@next/eslint-plugin-next": "16.1.6",
    "@opennextjs/cloudflare": "^1.16.5",
    "@playwright/test": "^1.57.0",
    "@react-email/preview-server": "5.2.5",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.0",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "axe-core": "^4.11.1",
    "dependency-cruiser": "^17.3.7",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-you-might-not-need-an-effect": "0.8.5",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-security-node": "1.1.4",
    "glob": "^13.0.0",
    "js-yaml": "^4.1.1",
    "jsdom": "^27.4.0",
    "knip": "^5.82.1",
    "lefthook": "2.0.15",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react-email": "^5.2.5",
    "react-grab": "^0.0.98",
    "react-scan": "^0.5.3",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18",
    "wrangler": "^4.65.0"
  },
  "pnpm": {
    "overrides": {
      "playwright@<1.55.1": ">=1.57.0",
      "vite@>=7.1.0 <7.3.0": ">=7.2.2",
      "tmp": "0.2.4",
      "js-yaml": "4.1.1",
      "mdast-util-to-hast": ">=13.2.1",
      "express": ">=4.22.0",
      "qs": ">=6.14.1",
      "lodash": ">=4.17.23",
      "ajv@>=8.0.0 <8.18.0": ">=8.18.0",
      "serialize-javascript@<=7.0.2": ">=7.0.3",
      "webpack@>=5.49.0 <5.104.1": ">=5.104.1"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "@vercel/speed-insights",
      "esbuild",
      "lefthook",
      "oxc-resolver",
      "sharp",
      "unrs-resolver"
    ]
  }
}
